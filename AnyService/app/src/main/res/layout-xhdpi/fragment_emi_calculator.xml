<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtLoanAmoutEmi"
        android:layout_alignParentLeft="true"
        android:text="@string/loan_amount"
        style="@style/txtEmiHeader"/>

    <EditText
        android:id="@+id/edtEmiLoanAmount"
        android:hint="amount"
        android:inputType="number"
        android:maxLength="7"
        android:gravity="center"
        android:layout_alignParentTop="true"
        style="@style/edtLoanAmount"
        />

    <TextView
        android:id="@+id/txtRupee"
        android:layout_toLeftOf="@id/edtEmiLoanAmount"
        android:text="â‚¹"
        style="@style/txtRupee"
        />


    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRupee"
        android:max="2000000"
        style="@style/CustomSeekBar2"
        />

    <ImageView
        android:id="@+id/imgLineFirstEmi"
        style="@style/imgLine"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="17dp"/>

    <TextView
        android:id="@+id/txtEmiFirstRange"
        android:layout_below="@id/imgLineFirstEmi"
        android:text="0.0L"
        style="@style/txtEFirst"
        />


    <ImageView
        android:id="@+id/imgLineSecondEmi"
        style="@style/imgLine"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:id="@+id/txtEmiSecondRange"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/imgLineSecondEmi"
        android:text="5.25L"
        style="@style/txtEmi"
        android:layout_toRightOf="@id/txtEmiFirstRange"
        />

    <ImageView
        android:id="@+id/imgLineThirdEmi"
        style="@style/imgLine"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:id="@+id/txtEmiThirdRange"
        android:layout_marginLeft="27dp"
        android:layout_below="@id/imgLineSecondEmi"
        android:text="10.25L"
        style="@style/txtEmi"
        android:layout_toRightOf="@id/txtEmiSecondRange"
        />

    <ImageView
        android:id="@+id/imgLineFourthEmi"
        style="@style/imgLine"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="270dp"/>

    <TextView
        android:id="@+id/txtEmiFourthRange"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/imgLineSecondEmi"
        android:text="15.25L"
        style="@style/txtEmi"
        android:layout_toRightOf="@id/txtEmiThirdRange"
        />

    <ImageView
        android:id="@+id/imgLineFifthEmi"
        style="@style/imgLine"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="340dp"/>

    <TextView
        android:id="@+id/txtEmiFifthRange"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/imgLineSecondEmi"
        android:text="20.00L"
        style="@style/txtEmi"
        android:layout_toRightOf="@id/txtEmiFourthRange"
        />

    <TextView
        android:id="@+id/txtLoanEmiROI"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtEmiFifthRange"
        android:text="@string/rate_interest"
        style="@style/txtEmiHeader"/>

    <EditText
        android:id="@+id/edtEmiLoanROI"
        android:hint="amount"
        android:inputType="number|numberDecimal"
        android:maxLength="7"
        android:gravity="center"
        android:layout_below="@id/txtEmiFifthRange"
        style="@style/edtLoanAmount"
        />

    <TextView
        android:id="@+id/txtPercentage"
        android:layout_toLeftOf="@id/edtEmiLoanROI"
        android:text="%"
        android:layout_below="@id/txtEmiFifthRange"
        style="@style/txtRupee"
        />


    <SeekBar
        android:id="@+id/seekBarROI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPercentage"
        android:max="200"
        style="@style/CustomSeekBar2"
        />

    <ImageView
        android:id="@+id/imgLineFirstROI"
        style="@style/imgLine"
        android:layout_marginTop="206dp"
        android:layout_marginLeft="17dp"/>

    <TextView
        android:id="@+id/txtROIFirstRange"
        android:layout_below="@id/imgLineFirstROI"
        android:text="0.0%"
        style="@style/txtEFirst"
        />


    <ImageView
        android:id="@+id/imgLineSecondROI"
        style="@style/imgLine"
        android:layout_marginTop="206dp"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/txtROISecondRange"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/imgLineSecondROI"
        android:text="5.0%"
        style="@style/txtEmi"
        android:layout_toRightOf="@id/txtROIFirstRange"
        />

    <ImageView
        android:id="@+id/imgLineThirdROI"
        style="@style/imgLine"
        android:layout_marginTop="206dp"
        android:layout_marginLeft="160dp"/>

    <TextView
        android:id="@+id/txtROIThirdRange"
        android:layout_marginLeft="17dp"
        android:layout_below="@id/imgLineSecondROI"
        android:text="10.0%"
        style="@style/txtEmi"
        android:layout_toRightOf="@id/txtROISecondRange"
        />

    <ImageView
        android:id="@+id/imgLineFourthROI"
        style="@style/imgLine"
        android:layout_marginTop="206dp"
        android:layout_marginLeft="240dp"/>

    <TextView
        android:id="@+id/txtROIFourthRange"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/imgLineSecondROI"
        android:text="15.0%"
        style="@style/txtEmi"
        android:layout_toRightOf="@id/txtROIThirdRange"
        />

    <ImageView
        android:id="@+id/imgLineFifthROI"
        style="@style/imgLine"
        android:layout_marginTop="206dp"
        android:layout_marginLeft="300dp"/>

    <TextView
        android:id="@+id/txtROIFifthRange"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/imgLineSecondROI"
        android:text="20.0%"
        style="@style/txtEmi"
        android:layout_toRightOf="@id/txtEmiFourthRange"
        />

</RelativeLayout>