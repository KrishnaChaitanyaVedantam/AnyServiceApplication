<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#FFFFFF" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtFDDepositAmount"
            android:layout_alignParentLeft="true"
            android:text="@string/Deposit_Amount"
            style="@style/txtEmiHeader"/>
        <EditText
            android:id="@+id/edtFDDepositAmount"
            android:hint="amount"
            android:inputType="number"
            android:maxLength="7"
            android:gravity="center"

            android:layout_alignParentTop="true"
            style="@style/edtLoanAmount"
            />
        <TextView
            android:id="@+id/txtFDRupee"
            android:layout_toLeftOf="@id/edtFDDepositAmount"
            android:text="â‚¹"
            style="@style/txtRupee"
            />
        <SeekBar
            android:id="@+id/sB_Depositamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFDRupee"
            android:max="5000000"
            style="@style/CustomSeekBar2"
            />
        <ImageView
            android:id="@+id/imgFDdepositLineFirst"
            style="@style/imgLine"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:id="@+id/txtFDdepositFirstRange"
            android:layout_below="@id/imgFDdepositLineFirst"
            android:text="0.0L"
            style="@style/txtEFirst"
            />
        <ImageView
            android:id="@+id/imgFDdepositeLineSecond"
            style="@style/imgLine"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="90dp"/>
        <TextView
            android:id="@+id/txtFDdepositeSecondRange"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/imgFDdepositeLineSecond"
            android:text="10.25L"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtFDdepositFirstRange"
            />
        <ImageView
            android:id="@+id/imgFDdepositeLineThird"
            style="@style/imgLine"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="150dp"/>
        <TextView
            android:id="@+id/txtFDdepositeThirdRange"
            android:layout_marginLeft="27dp"
            android:layout_below="@id/imgFDdepositeLineThird"
            android:text="20.25L"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtFDdepositeSecondRange"
            />
        <ImageView
            android:id="@+id/imgFDdepositeFourth"
            style="@style/imgLine"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="213dp"/>
        <TextView
            android:id="@+id/txtFDdepositeFourthRange"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/imgFDdepositeFourth"
            android:text="30.25L"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtFDdepositeThirdRange"
            />
        <ImageView
            android:id="@+id/imgFDdepositeFourthOne"
            style="@style/imgLine"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="270dp"/>
        <TextView
            android:id="@+id/txtFDdepositeFourthRangeOne"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/imgFDdepositeFourthOne"
            android:text="40.25L"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtFDdepositeFourthRange"
            />
        <ImageView
            android:id="@+id/imgFDdepositeLineFifth"
            style="@style/imgLine"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="340dp"/>

        <TextView
            android:id="@+id/txtFDdepositeFifthRange"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/imgFDdepositeLineFifth"
            android:text="50.00L"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtFDdepositeFourthRange"
            />
        <!-- Rate of Interest-->
        <TextView
            android:id="@+id/txtLoanFDROI"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtFDdepositeFifthRange"
            android:text="@string/rate_interest"
            style="@style/txtEmiHeader"/>
        <EditText
            android:id="@+id/edtFDLoanROI"
            android:hint="amount"
            android:inputType="number"
            android:maxLength="7"
            android:gravity="center"
            android:layout_below="@id/txtFDdepositeFifthRange"
            style="@style/edtLoanAmount"
            />
        <TextView
            android:id="@+id/txtFDPercentage"
            android:layout_toLeftOf="@id/edtFDLoanROI"
            android:text="%"
            android:layout_below="@id/txtFDdepositeFifthRange"
            style="@style/txtRupee"
            />
        <SeekBar
            android:id="@+id/seekBarROI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFDPercentage"
            android:max="200"
            style="@style/CustomSeekBar2"
            />

        <ImageView
            android:id="@+id/imgLineFirstROI"
            style="@style/imgLine"
            android:layout_marginTop="206dp"
            android:layout_marginLeft="17dp"/>

        <TextView
            android:id="@+id/txtROIFirstRange"
            android:layout_below="@id/imgLineFirstROI"
            android:text="0.0%"
            style="@style/txtEFirst"
            />


        <ImageView
            android:id="@+id/imgLineSecondROI"
            style="@style/imgLine"
            android:layout_marginTop="206dp"
            android:layout_marginLeft="110dp"/>

        <TextView
            android:id="@+id/txtROISecondRange"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/imgLineSecondROI"
            android:text="5.0%"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtROIFirstRange"
            />

        <ImageView
            android:id="@+id/imgLineThirdROI"
            style="@style/imgLine"
            android:layout_marginTop="207dp"
            android:layout_marginLeft="180dp"/>

        <TextView
            android:id="@+id/txtROIThirdRange"
            android:layout_marginLeft="27dp"
            android:layout_below="@id/imgLineSecondROI"
            android:text="10.0%"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtROISecondRange"
            />

        <ImageView
            android:id="@+id/imgLineFourthROI"
            style="@style/imgLine"
            android:layout_marginTop="206dp"
            android:layout_marginLeft="255dp"/>

        <TextView
            android:id="@+id/txtROIFourthRange"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/imgLineSecondROI"
            android:text="15.0%"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtROIThirdRange"
            />

        <ImageView
            android:id="@+id/imgLineFifthROI"
            style="@style/imgLine"
            android:layout_marginTop="206dp"
            android:layout_marginLeft="340dp"/>

        <TextView
            android:id="@+id/txtROIFifthRange"
            android:layout_marginLeft="33dp"
            android:layout_below="@id/imgLineFifthROI"
            android:text="20.0%"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtROIFourthRange"
            />
        <!--Deposit Tenure (in Years)-->
        <TextView
            android:id="@+id/txtdepoitetenure"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txtROIFifthRange"
            android:text="@string/deposite_tenure"
            style="@style/txtEmiHeader"/>
        <EditText
            android:id="@+id/edtFDdepositetenure"
            android:hint="amount"
            android:inputType="number"
            android:maxLength="7"
            android:gravity="center"
            android:layout_below="@id/txtROIFifthRange"
            style="@style/edtLoanAmount"
            />
        <TextView
            android:id="@+id/txtFDtenuerePercentage"
            android:layout_toLeftOf="@id/edtFDdepositetenure"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:layout_below="@id/txtROIFifthRange"
            style="@style/txtRupee"
            />
        <SeekBar
            android:id="@+id/seekBarDTIY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFDtenuerePercentage"
            android:max="10"
            style="@style/CustomSeekBar2"
            />
        <!-- ImageDesigns-->
        <ImageView
            android:id="@+id/imgLineFirstDTIY"
            style="@style/imgLine"
            android:layout_marginTop="334dp"
            android:layout_marginLeft="17dp"/>

        <TextView
            android:id="@+id/txtDTIYFirstRange"
            android:layout_below="@id/imgLineFirstDTIY"
            android:text="0"
            style="@style/txtEFirst"
            />


        <ImageView
            android:id="@+id/imgLineSecondDTIY"
            style="@style/imgLine"
            android:layout_marginTop="334dp"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/txtDTIYSecondRange"
            android:layout_marginLeft="60dp"
            android:layout_below="@id/imgLineSecondDTIY"
            android:text="2"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtDTIYFirstRange"
            />

        <ImageView
            android:id="@+id/imgLineThirdDTIY"
            style="@style/imgLine"
            android:layout_marginTop="334dp"
            android:layout_marginLeft="150dp"/>

        <TextView
            android:id="@+id/txtDTIYThirdRange"
            android:layout_marginLeft="45dp"
            android:layout_below="@id/imgLineThirdDTIY"
            android:text="4"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtDTIYSecondRange"
            />

        <ImageView
            android:id="@+id/imgLineFourthDTIY"
            style="@style/imgLine"
            android:layout_marginTop="334dp"
            android:layout_marginLeft="210dp"/>

        <TextView
            android:id="@+id/txtDTIYFourthRange"
            android:layout_marginLeft="57dp"
            android:layout_below="@id/imgLineFourthDTIY"
            android:text="6"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtDTIYThirdRange"
            />
        <ImageView
            android:id="@+id/imgLineFourthDTIYOne"
            style="@style/imgLine"
            android:layout_marginTop="334dp"
            android:layout_marginLeft="269dp"/>

        <TextView
            android:id="@+id/txtDTIYFourthRangeOne"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/imgLineFourthDTIYOne"
            android:text="8"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtDTIYFourthRange"
            />
        <ImageView
            android:id="@+id/imgLineFifthDTIY"
            style="@style/imgLine"
            android:layout_marginTop="334dp"
            android:layout_marginLeft="340dp"/>

        <TextView
            android:id="@+id/txtDTIYFifthRange"
            android:layout_marginLeft="105dp"
            android:layout_below="@id/imgLineFifthDTIY"
            android:text="10"
            style="@style/txtFD"
            android:layout_toRightOf="@id/txtDTIYFourthRange"
            />

        <LinearLayout
            android:id="@+id/lnrEmiCalculation"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@id/txtDTIYFifthRange"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txtMonthlyEmi"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Maturity Amount"
                style="@style/txtMonthlyEmi" />

            <TextView
                android:id="@+id/txtEmiAmount"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                style="@style/edtTotalAmount" />


        </LinearLayout>

        <Button
            android:id="@+id/btnGetQuotes"
            style="@style/btnQuotes"
            android:layout_below="@id/lnrEmiCalculation" />



    </RelativeLayout>
</ScrollView>